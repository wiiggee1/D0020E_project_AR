extends header.pug
block linkJs
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" integrity="sha256-kLaT2GOSpHechhsozzB+flnD+zUyjE2LlfWPgU04xyI=" crossorigin="")
    script(src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js" integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM=" crossorigin="")
    script(src="/js/map.js")
block content
    div#midbox
        div#infobox 
            div#selects
                select#startingpoint
                    option(value='0', selected=true) --Choose starting point--
                    option(value='1') Room 1
                    option(value='2') Room 2
                select#obstaclecourse
                    option(value='0', selected=true) --Choose obstacle course--
                    option(value='1') Course 1
                    option(value='2') Course 2
                select#walkthrough
                    option(value='0', selected=true) --Choose walkthrough--
                    option(value='1') Walkthrough 1
                    option(value='2') Walkthrough 2
            p(style='white-space:pre;')
                | Default infobox for now
                | Another line in default infobox
                | And one more
        button#startbtn START
    div#bottombox
        div#timer
            p Time passed 00:00
        div#maps
            div.mapcontainer
                div.maptext
                    p 2D map
                div#map2d
            div.mapcontainer
                div.maptext
                    p 3D map
                div#map3d
                    p Here will be a 3D map