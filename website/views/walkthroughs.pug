extends header.pug
block linkJs
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" integrity="sha256-kLaT2GOSpHechhsozzB+flnD+zUyjE2LlfWPgU04xyI=" crossorigin="")
    script(src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js" integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM=" crossorigin="")
    script(src="/js/map.js")
block content
    div#midbox
        div#infobox 
            div#selects
                select#startingpoint
                    option(value='0', selected=true) --Choose starting point--
                    option(value='1') Room 1
                    option(value='2') Room 2
                select#obstaclecourse
                    option(value='0', selected=true) --Choose obstacle course--
                    option(value='1') Course 1
                    option(value='2') Course 2
                select#walkthrough
                    option(value='0', selected=true) --Choose walkthrough--
                    option(value='1') Walkthrough 1
                    option(value='2') Walkthrough 2
            p(style='white-space:pre;')
                | Default infobox for now
                | Another line in default infobox
                | And one more
        button#startbtn START
    div#bottombox
        div#timer
            p Time passed 00:00
        div#maps
            div.mapcontainer
                div.maptext
                    p 2D map
                div#map2d
                script.
                    const luleCoords = [65.58438073922254, 22.159403177945457];
                    const ltuCoords = [65.61818932415491, 22.140257153674423];
                    const fCoords = [65.6194494566347, 22.14276807449434];

                    var map2d = L.map('map2d').setView(luleCoords, 12);
                    var osm = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
                    }).addTo(map2d);

                    var bike = L.tileLayer('https://{s}.tile-cyclosm.openstreetmap.fr/cyclosm/{z}/{x}/{y}.png', {
                        attribution: '<a href="https://github.com/cyclosm/cyclosm-cartocss-style/releases" title="CyclOSM - Open Bicycle render">CyclOSM</a> | Map data: &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                    });

                    var esri = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
                        attribution: 'Tiles &copy; Esri &mdash; Source: Esri, i-cubed, USDA, USGS, AEX, GeoEye, Getmapping, Aerogrid, IGN, IGP, UPR-EGP, and the GIS User Community'
                    });
                    var darkMode = L.tileLayer('https://tiles.stadiamaps.com/tiles/alidade_smooth_dark/{z}/{x}/{y}{r}.png', {
                        attribution: '&copy; <a href="https://stadiamaps.com/">Stadia Maps</a>, &copy; <a href="https://openmaptiles.org/">OpenMapTiles</a> &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors'
                        });

                    var ltuLogo = L.icon({
                        iconUrl: '/img/LTU_L_sve_bla.png',
                        iconSize: [50, 50]
                    });

                    var ltu = L.marker(ltuCoords, {icon: ltuLogo}).addTo(map2d);
                    
                    var backgrounds = {
                        "Normal": osm,
                        "Dark mode": darkMode,
                        "Bike": bike,
                        "Satelite": esri
                    };

                    var checkboxes = {
                        "LTU": ltu
                    };

                    var layerControl = L.control.layers(backgrounds, checkboxes).addTo(map2d);

            div.mapcontainer
                div.maptext
                    p 3D map
                div#map3d
                    p Here will be a 3D map